{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main>
	<section>
		<div class="form">
			<h1 class="form__title">Інформація про товар</h1>
			<form method="POST" action="/product-create">
				<div class="form__content">
					<div class="form__product">
						<div>
							<label for="name" class="form__label">Назва товару:</label>
							<input type="name" name="name" class="form__input">
						</div>
						<div>
							<lebel for="price" class="form__lebel">Ціна:</lebel>
							<input type="price" name="price" class="form__input">
						</div>
					</div>
					<div class="form__field">
						<lebel for="description" class="form__lebel">Короткий опис товару:</lebel>
						<input type="description" name="description" class="form__input">
					</div>
					<button href="/product-list" class="form__button">Створити товар</button>
				</div>
			</form>
		</div>
	</section>
	<section>
		<div class="form">
			<h1 class="form__title">Список продуктів</h1>
			<div class="product-list">
				{{#with data.products}}
				{{#if Empty}}
				<mark> Пустий</mark>
				{{else}}
				<ul>
					{{#each list}}
					<li>{{name}}|{{price}}|{{id}} <a href="/product-delete?id={{id}}">(видалити)</a></li>
					{{/each}}
				</ul>
				{{/if}}
				{{/with}}
			</div>


		</div>
	</section>
</main>

